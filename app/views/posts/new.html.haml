.container
	.row
		%h1.text-center Create new blog post
		.col-md-6.col-md-offset-3
			
			=simple_form_for @post, html: { class: 'form-horizontal' } do |f|
				.form-group
					=f.input :title, class: "form-control"
				.form-group	
					=f.input :description, input_html: { rows: 10 }
				.form-group
					=f.button :submit
